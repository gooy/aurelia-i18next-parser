{
  "bitwise": true,
  "eqeqeq": true,
  "forin": true,
  "freeze": true,
  "globalstrict": false,
  "latedef": "nofunc",
  "noarg": true,
  "nonbsp": true,
  "nonew": true,
  "notypeof": false,
  "shadow": false,
  "undef": true,
  "unused": true,

  "strict": false,
  "esnext": true,
  "eqnull": true,
  "browser": true,
  "node": true,

  "devel": false,
  "jquery": false,
  "debug": false,

  // Custom Globals
  "globals"       : {
    "Promise"    : true,      // Avoid "redefinition of Promise" warning
    "System"    : true      // Avoid "redefinition of Promise" warning
  }

}
